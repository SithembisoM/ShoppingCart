@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Product Catalog";
}

<h2>Products Catalog</h2>

    <table class="table table-bordered table-responsive table-hover">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Photo)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => product.Name)</td>
                <td>@Html.DisplayFor(modelItem => product.Price)</td>
                <td>@Html.DisplayFor(modelItem => product.Photo)</td>
            
                <td>
                    @Html.ActionLink("Add to Cart", "Index", "Cart", routeValues: new
                    {
                        basketItemId = product.Id
                    }, htmlAttributes: null)
                </td>
            </tr>
        }
        <tbody/>
    </table>
